<Window x:Class="WoWOpenGL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:WF="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        xmlns:GL="clr-namespace:OpenTK;assembly=OpenTK.GLControl"
        Title="WoW Format Test UI (OpenGL)" Height="931.5" Width="1080.5" Background="White" ResizeMode="CanMinimize"
        Loaded="Window_Loaded"
        Closed="Window_Closed">
    <Grid Margin="0,0,4,5">
        <TabControl HorizontalAlignment="Left" Height="883" Margin="10,5,0,0" VerticalAlignment="Top" Width="1050">
            <TabItem Header="Models">
                <Grid>
                    <ListBox x:Name="ModelListBox" HorizontalAlignment="Left" Height="495" Margin="10,46,0,0" VerticalAlignment="Top" PreviewKeyDown="ModelListBox_PreviewKeyDown" SelectionChanged="ModelListBox_SelectionChanged" Loaded="ModelListBox_Loaded" ItemsSource="{Binding}" Width="329" />
                    <WindowsFormsHost x:Name="wfContainer" Background="Black" Margin="344,0,0,0">
                        <WF:Label Text="Select something from the left to make it show up!" ForeColor="White" TextAlign="MiddleCenter"></WF:Label>
                    </WindowsFormsHost>
                    <ListBox HorizontalAlignment="Left" Height="299" Margin="10,546,0,0" VerticalAlignment="Top" Width="329">
                        <ListView x:Name="DebugListBox" Height="275" Width="304">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </ListBox>
                    <Label x:Name="contentTypeLoading" Content="Initialising web content, this might take a while!" Margin="48,8,735,815" Foreground="Black" Visibility="Collapsed"/>
                    <ProgressBar x:Name="CASCprogress" Margin="50,233,735,601" Visibility="Hidden"/>
                    <Label x:Name="CASCdesc" Content="Loading web content.." Margin="50,254,735,569" Foreground="Black" Visibility="Hidden"/>
                    <RadioButton x:Name="contentTypeLocal" Content="Use local content" HorizontalAlignment="Left" Margin="40,14,0,0" VerticalAlignment="Top" GroupName="contentType" IsChecked="True" Checked="contentTypeLocal_Checked" />
                    <RadioButton x:Name="contentTypeOnline" Content="Use web content" HorizontalAlignment="Left" Margin="201,14,0,0" VerticalAlignment="Top" GroupName="contentType" Checked="contentTypeOnline_Checked" RenderTransformOrigin="0.102,0.622" />
                </Grid>
            </TabItem>
            <TabItem Header="Maps">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="73*" />
                        <ColumnDefinition Width="972*" />
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="MapListBox" HorizontalAlignment="Left" Height="778" Margin="10,10,0,0" VerticalAlignment="Top" Width="315" Grid.ColumnSpan="2">
                    </ListBox>
                    <Button x:Name="btnLoadMap" Content="Load Map" HorizontalAlignment="Left" Margin="173.5,813,0,0" VerticalAlignment="Top" Width="640" Click="Button_Click" Height="32" Grid.Column="1" />
                    <Grid x:Name="WDTGrid" HorizontalAlignment="Left" Height="640" Margin="257.5,122,0,0" VerticalAlignment="Top" Width="640" Grid.Column="1" />
                    <ProgressBar x:Name="pbLoadMap" HorizontalAlignment="Left" Height="11" Margin="10,813,0,0" VerticalAlignment="Top" Width="231" Grid.ColumnSpan="2" />
                    <RadioButton x:Name="rbSortMapId" Content="Sort by Map Id" HorizontalAlignment="Left" Margin="14,793,0,0" VerticalAlignment="Top" GroupName="MapListSort" IsChecked="True" Checked="rbSortMapId_Checked" Grid.ColumnSpan="2" />
                    <RadioButton x:Name="rbSortName" Content="Sort by Name" HorizontalAlignment="Left" Margin="44.5,793,0,0" VerticalAlignment="Top" GroupName="MapListSort" Checked="rbSortName_Checked" Grid.Column="1" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>